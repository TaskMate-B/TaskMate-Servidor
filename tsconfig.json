        "rootDir": "./src",
        "outDir": "./dist",
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
